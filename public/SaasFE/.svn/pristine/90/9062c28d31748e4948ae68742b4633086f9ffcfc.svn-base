html,
body {
    height: 100%;
}


/* ==== start 表格样式重置 */

.layui-table th,
.layui-table td {
    text-align: center;
}


/* ==== end 表格样式重置 */


/* ==== start 按钮样式重置 */

.layui-btn-sm {
    width: 64px;
    height: 24px;
    line-height: 24px;
    border-radius: 3px;
}

.layui-btn-primary {
    border-color: #2681dc;
    color: #2681dc;
}


/* ==== end 按钮样式重置 */

.service-manage-container {
    height: 100%;
}

.service-manage-container .layui-nav-tree {
    width: 20%;
}

.service-manage-content {
    height: 100%;
    margin-left: 20%;
}

.group-handle-wrapper {
    height: 26px;
    background: red;
}

.group-handle-wrapper .title {
    float: left;
    padding-left: 20px;
    font-size: 14px;
    line-height: 26px;
}

.group-handle-wrapper .group-handle {
    float: right;
    margin-right: 142px;
}

.group-handle-wrapper .group-handle .layui-form-label {
    width: auto;
    padding-right: 0;
}

.group-handle-wrapper .group-handle .addGroup {
    position: relative;
    top: 1px;
    margin-right: 6px;
    vertical-align: top;
}

.service-content-tab-wrapper {
    padding-top: 35px;
}

.layui-table .s-i {
    vertical-align: middle;
}